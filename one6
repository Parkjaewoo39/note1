 for (int y = 0; y <= 3; y++) 
            {
                for (int x = 0; x < 3; x++) //안쪽이 만이 돌아서x
                {
                    if (x == y) { twoArray[x, y] = 1; }
                    else { twoArray[y, x] = 0; }
                }
            }           //loop: 값을 대입하는 루프
            
